<%= render 'comments/form' %>
<% @comments.each do |comment| %>
<section>
  <h2>
    <%= link_to comment.title, comment %>
  </h2>
  <%= simple_format comment.body %>
  <p class="meta">
    <span class="author">
      <%= comment.name %>
    </span>
    <time>
      <%= link_to comment.created_at.to_s(:long_datetime), comment %>
    </time>
  </p>
  <p class="tools">
    <%= link_to 'Edit', edit_comment_path(comment), class: 'button yellow' %>
    <%= link_to 'Delete' , comment, class: 'button red', method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
</section>
<% end %>